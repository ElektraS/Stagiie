-if user_signed_in?
	%h3
		="Bienvenue"
		%small
			=@current_user.firts_name+" "+@current_user.name 
	.row
		.col-md-6
			%h5 Les témoignages
			-@internships.reverse.each do |i|
				.panel.panel-info
					.panel-heading				
						= "Chez "+i.comp+" fait parx "
					#collapseOne
					.panel-collapse.collapse.in
						.panel-body
							%p 
								= i.field
							%p
								= i.supervisor
					.panel-footer
						=link_to 'Voir la fiche', {:controller => :internships, :action => :show, :id => i.id}	
		.col-md-6
			%h5 Les entreprises
			-@compagny.reverse.each do |j|
				.panel.panel-success
					.panel-heading
						= j.name
					.panel-body
						%p
							=j.field
						%p
							=j.web_site
					.panel-footer
						=link_to 'En savoir plus', {:controller => :companies, :action => :show, :id => j.id}
-else
	%h5
		="Hello stranger"
		%small
			="veuillez vous connecter ou vous inscrire pour accéder au site !"
