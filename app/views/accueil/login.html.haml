-if user_signed_in?
	%h3
		="Bienvenue"
		%small
			=@current_user.firts_name+" "+@current_user.name 
	.row
		.col-md-6
			%h5 Les Stages
			-@internships.reverse.each do |i|
				.panel.panel-info
					.panel-heading	
						= "@ "+i.comp
					.panel-body
						.row
							.col-md-5
								.section
									Technologie
							.col-md-6
								.comment 
									= i.field
						.row
							.col-md-5
								.section
									Maitre de stage
							.col-md-6
								.comment
									= i.supervisor
					.panel-footer
						=link_to 'Voir la fiche', {:controller => :internships, :action => :show, :id => i.id}	
		.col-md-6
			%h5 Les entreprises
			-@compagny.reverse.each do |j|
				.panel.panel-success
					.panel-heading
						= j.name
					.panel-body
						.row
							.col-md-5
								.section
									Domaine
							.col-md-6
								.comment 
									= j.field
						.row
							.col-md-5
								.section
									Site internet
							.col-md-6
								.comment
									= j.web_site	
					.panel-footer
						=link_to 'En savoir plus', {:controller => :companies, :action => :show, :id => j.id}
-else
	%h5
		="Hello stranger"
		%small
			="veuillez vous connecter ou vous inscrire pour acc√©der au site !"
