-if user_signed_in?
	%h3
		="Bienvenue"
		%small
			=@current_user.firts_name+" "+@current_user.name 
	.row
		.col-md-6
			%h5 
				="Stages récents"
				#show_all_int.label.label-default
					%a{href:"/internships/new"}
						="+"
				#show_all_int.label.label-default
					%a{href: "/internships/show_all"}
						="Voir tous"					
			-@internships.reverse.each do |i|
				.panel.panel-info
					.panel-heading	
						= "@ "+i.comp
					.panel-body
						.row
							.col-md-5
								.section
									Technologie
							.col-md-6
								.comment 
									= i.field
						.row
							.col-md-5
								.section
									Maitre de stage
							.col-md-6
								.comment
									= i.supervisor
					.panel-footer
						=link_to 'Voir la fiche', {:controller => :internships, :action => :show, :id => i.id}	
		.col-md-6
			%h5 
				="Entreprises récentes"
				#show_all_comp.label.label-default
					%a{href:"companies/new"}
						="+"
				#show_all_comp.label.label-default
					%a{href: "/companies/show_all"}
						="Voir toutes"			
			-@compagny.reverse.each do |j|
				.panel.panel-success
					.panel-heading
						= j.name
					.panel-body
						.row
							.col-md-5
								.section
									Domaine
							.col-md-6
								.comment 
									= j.field
						.row
							.col-md-5
								.section
									Site internet
							.col-md-6
								%a.comment{href:"#{j.web_site}"}
									= j.web_site	
					.panel-footer
						=link_to 'En savoir plus', {:controller => :companies, :action => :show, :id => j.id}
-else
	%h5
		="Hello stranger"
		%small
			="veuillez vous connecter ou vous inscrire pour accéder au site !"
