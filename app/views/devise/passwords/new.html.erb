<h5>Mot de passe oublié ?</h5>

<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :autofocus => true, label:"Email" %></div>
  <div class="center">
  <div><%= f.primary "Envoyez un mail de réinitialisation" %></div>
<% end %>

<%= render "devise/shared/links" %></div>
