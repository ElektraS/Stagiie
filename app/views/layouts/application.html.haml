!!!
%html
  %head
    %title Stagiie
    /%link{href: "app/assets/stylsheets/bootstrap-3.1.1-dist/css/bootstrap.min.css", rel: "stylesheet"}/
    %link{href: "app/assets/stylsheets/flat-ui.css", rel: "stylesheet"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %link{href: "app/assets/stylesheets/style.css", rel: "stylesheet"}
  %body
    %nav.navbar.navbar-inverse{role: "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %a.navbar-brand{href: "/"} Stagiie
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{href: "/internships/new"} ++ Stage
            %li
              %a{href: "/companies/new"} ++ Fiche entreprise
            %li
              %a{href: "about/us"} A propos
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                = link_to 'Edit profile ('+current_user.email+')', edit_user_registration_path, :class => 'navbar-link'
              %li
                \#{link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'}
            - else 
              - if admin_signed_in?
                Admin is
                =succeed "." do
                  %strong=current_admin.email
                =link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link'
                %li
                  \#{link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'}
              - else
                %li
                  = link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
                %li
                  \#{link_to "Login", new_user_session_path, :class => 'navbar-link'}          
    .container
      .titre
        %h4
          Stagiie
          %small Venez partager l'expérience de la machine à café

    .container
      = yield
