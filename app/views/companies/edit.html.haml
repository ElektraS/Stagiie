-if user_signed_in?
  %h2 Édition
  = form_for @company do |f|
    - if @company.errors.any?
      #error_explanation
        %h2= "#{pluralize(@company.errors.count, "errors")} prohibited this annonce from being saved: "
        %ul
          - @company.errors.full_messages.each do |msg|
            %li = msg
    %div
      = f.label :Nom_de_l_Entreprise
      %br/
      = f.text_field :name
    %div
      = f.label :Domaine
      %br/
      = f.text_field :field
    %div
      = f.label :Site_Web
      %br/
      = f.url_field :web_site
    %div
      = f.label :Mail
      %br/
      = f.email_field :mail
    %div
      = f.label :Téléphone
      %br/
      = f.number_field :phone
    %div
      = f.label :Adresse
      %br/
      = f.text_area :adress
    %div
      = f.label :Existence
      %br/
      = f.text_field :existence
    %div
      = f.label :Maîtres_de_stages
      %br/
      = f.text_area :supervisors
    %div= f.submit "Update"

    = link_to "Back", :back 
-else 
  %h2 Veuillez vous connecter