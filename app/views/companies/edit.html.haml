-if user_signed_in?
  %h4 Editer une entreprise
  = form_for @company do |f|
    - if @company.errors.any?
      #error_explanation
        %h2= "#{pluralize(@company.errors.count, "errors")} prohibited this annonce from being saved: "
        %ul
          - @company.errors.full_messages.each do |msg|
            %li = msg
  = bootstrap_form_for(@company, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f|
    %div
      = f.text_field :name, label: "Nom", placeholder: "Appsdeck"
    %div
      = f.text_field :field, label: "Domaine", placeholder: "Activité principale"
    %div
      = f.url_field :web_site, label: "Site internet"
    %div
      = f.email_field :mail, label: "Email",placeholder: "Comment contacter l'entreprise par mail"
    %div
      = f.number_field :phone, label: "Contact téléphone"
    %div
      = f.text_field :adress, label: "Adresse postale"
    %div
      = f.text_field :existence
    %div
      = f.text_area :supervisors, label: "Maitres de stage", placeholder: "Liste des personnes ayant déja pris des ensiiens en stage"
    .btenregistrer
      = f.primary "Enregistrer"

-else
  %h5
    ="Hello stranger"
    %small
      ="veuillez vous connecter ou vous inscrire pour accéder au site !"
  #banierehc
    .row
      .col-md-3
        .center
          %img{alt: "Calendar", src: "/images/icons/svg/calendar.svg"}
      .col-md-3
        .center
          %img{src: "/images/icons/svg/compas.svg"}
      .col-md-3
        .center
          %img{src: "/images/icons/svg/pencils.svg"}
      .col-md-3
        .center
          %img{src: "/images/icons/svg/retina.svg"}
    .row
      .col-md-3
        .center
          %h6 Vous cherchez un stage et vous manquez d'inspiration ?        
      .col-md-3
        .center
          %h6 Vous ne connaissez pas beaucoup d'entreprises de la région ?
      .col-md-3
        .center
          %h6 Vous êtes un ancien qui souhaite contribuer au réseau des iiens ?
      .col-md-3
        .center                         
          %h6 Inscrivez-vous, découvrez et partagez !
  .row
    .col-md-6
      #btnhc_connection
        =button_to "Se connecter", new_user_session_path, class: "btn btn-primary btn-lg", :method => "get"
    .col-md-6
      #btnhc_inscription
        =button_to "S'inscrire", new_user_registration_path, class: "btn btn-inverse btn-lg", :method => "get" 
