-if user_signed_in?
	%h5 
		="Toutes les Entreprises"
		#show_all_comp.label.label-default
			%a{href:"/companies/new"}
				="+"
	-@company.reverse.each do |j|
		.row
			.col-md-2
			.col-md-8
				.panel.panel-success
					.panel-heading
						= j.name
					.panel-body
						.row
							.col-md-6
								.section
									Domaine
							.col-md-6
								.comment 
									= j.field
						.row
							.col-md-6
								.section
									Site internet
							.col-md-6
								.comment
									= j.web_site	
					.panel-footer
						=link_to 'En savoir plus', {:controller => :companies, :action => :show, :id => j.id}
	.center
		= will_paginate(@company, :renderer => WillPaginate::ActionView::LinkRenderer)
-else
	%h5
		="Hello stranger"
		%small
			="veuillez vous connecter ou vous inscrire pour accéder au site !"
	#banierehc.container
		.row
			.col-md-3
				.center
					%img{alt: "Calendar", src: "/images/icons/svg/calendar.svg"}
					%h6 Vous cherchez un stage et vous manquez d'inspiration ?
			.col-md-3
				.center
					%img{src: "/images/icons/svg/compas.svg"}
					%h6 Vous ne connaissez pas beaucoup d'entreprise de la région ?
			.col-md-3
				.center
					%img{src: "/images/icons/svg/pencils.svg"}
					%h6 Vous êtes un anciens qui souhaite contribuer au réseau des iiens ?
			.col-md-3
				.center
					%img{src: "/images/icons/svg/retina.svg"}
					%h6 Inscrivez-vous, découvrez et partagez !