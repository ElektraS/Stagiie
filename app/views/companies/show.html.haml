-if user_signed_in?

  .panel.panel-success
    .panel-heading
      %h6
        = "Fiche entreprise : "        
        %strong
          =@company.name
    .panel-body         
      .row
        .col-md-3
          .section
            Domaine d'activité
        .col-md-9
          .comment
            =@company.field
      .row
        .col-md-3
          .section
            Site internet
        .col-md-9
          %a.comment{href:"#{@company.web_site}"}
            =@company.web_site
      .row
        .col-md-3
          .section
            Contact mail
        .col-md-9
          .comment
            =mail_to @company.mail
      .row
        .col-md-3
          .section
            Adresse
        .col-md-9
          .comment
            =@company.adress
      .row
        .col-md-3
          .section
            Téléphone
        .col-md-9
          .comment
            =@company.phone
      .row
        .col-md-3
          .section.color_gris
            Dernière maj
        .col-md-9
          .comment.color_gris
            =@company.updated_at.to_time.strftime('%B %e at %l:%M %p')            
    .panel-footer
      .show_internship
        - if user_signed_in?
          .row
            .col-md-6
              .suppr
                %a
                  =button_to 'Editer', { :controller => :companies, :action => 'edit', :id => @company.id }, class: "btn btn-primary", :method => 'get'
            .col-md-6
              .editer
                %a 
                  =button_to "Supprimer", { :controller => :companies, :action => 'destroy', :id => @company.id }, :method => :delete, class: "btn btn-danger"
        - else
          %a
            =button_to 'Signaler', { :controller => :companies, :action => 'edit', :id => @company.id }, class: "btn btn-primary", :method => 'get' 


-else
  %h4
    ="Hello stranger"
    %small
      ="veuillez vous connecter ou vous inscrire pour accéder au site !"


